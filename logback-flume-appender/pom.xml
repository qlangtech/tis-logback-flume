<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <groupId>com.qlangtech.tis</groupId>
        <artifactId>tis-logback-flume-parent</artifactId>
        <version>${revision}</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>tis-logback-flume-appender</artifactId>
    <properties>
        <avro.version>1.11.0</avro.version>
    </properties>
    <name>TIS Logback Flume Appender</name>
    <scm>
        <connection>scm:git:ssh://github.com/gilt/logback-flume-appender.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/gilt/logback-flume-appender.git</developerConnection>
        <url>https://github.com/gilt/logback-flume-appender</url>
        <tag>HEAD</tag>
    </scm>

    <build>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <createDependencyReducedPom>true</createDependencyReducedPom>
                            <shadedArtifactAttached>true</shadedArtifactAttached>
                            <relocations>
                                <relocation>
                                    <pattern>org.apache.avro</pattern>
                                    <shadedPattern>com.qlangtech.org.apache.avro</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.apache.thrift</pattern>
                                    <shadedPattern>com.qlangtech.org.apache.thrift</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google</pattern>
                                    <shadedPattern>com.qlangtech.com.google</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.apache.commons</pattern>
                                    <shadedPattern>com.qlangtech.org.apache.commons</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.thoughtworks</pattern>
                                    <shadedPattern>com.qlangtech.com.thoughtworks</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.codehaus.jackson</pattern>
                                    <shadedPattern>com.qlangtech.org.codehaus.jackson</shadedPattern>
                                </relocation>

                                <relocation>
                                    <pattern>org.apache.http</pattern>
                                    <shadedPattern>com.qlangtech.org.apache.http</shadedPattern>
                                </relocation>

                            </relocations>
                            <artifactSet>
                                <excludes>
                                    <!--                                    <exclude>org.apache.lucene:*</exclude>-->
                                    <exclude>org.slf4j:*</exclude>
                                    <exclude>org.apache.logging.log4j:*</exclude>
                                    <exclude>org.apache.derby:*</exclude>
                                    <exclude>org.mortbay.jetty:*</exclude>
                                    <exclude>org.apache.velocity:*</exclude>
                                    <exclude>org.eclipse.jetty:*</exclude>
                                    <exclude>org.apache.mina:*</exclude>
                                    <exclude>org.apache.flume.flume-ng-sinks:*</exclude>
                                    <exclude>commons-dbcp:*</exclude>
                                    <exclude>org.apache.curator:*</exclude>
                                </excludes>
                            </artifactSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>

    </build>

    <dependencies>
        <dependency>
            <groupId>org.apache.flume</groupId>
            <artifactId>flume-ng-sdk</artifactId>
        </dependency>

        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-core</artifactId>
        </dependency>

        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
        </dependency>

        <dependency>
            <groupId>com.qlangtech.tis</groupId>
            <artifactId>tis-config</artifactId>
        </dependency>



    </dependencies>
</project>
